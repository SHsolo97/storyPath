datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = []
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  profiles  Profile?
  saves     Save[]
  bookmarks Bookmark[]
  purchases Purchase[]
}

model Profile {
  userId     String  @id
  displayName String?
  avatarUrl   String?
  user        User   @relation(fields: [userId], references: [id])
}

model Story {
  id           String   @id
  title        String
  description  String?
  cover        String?
  genres       String[]
  ageRating    String?
  premiumModel String
  version      String
  chapters     Chapter[]
}

model Chapter {
  id       String  @id
  storyId  String
  idx      Int
  title    String
  premium  Boolean @default(false)
  assets   String[]
  story    Story   @relation(fields: [storyId], references: [id])
  @@index([storyId, idx])
}

model Save {
  id        String   @id @default(cuid())
  userId    String
  storyId   String
  chapterId String
  nodeId    String
  variables Json
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  @@index([userId, storyId])
}

model Bookmark {
  id        String   @id @default(cuid())
  userId    String
  storyId   String
  chapterId String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  @@index([userId, storyId])
}

model Purchase {
  id            String   @id @default(cuid())
  userId        String
  productId     String
  provider      String
  transactionId String
  entitlement   String
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id])
  @@index([userId])
}
