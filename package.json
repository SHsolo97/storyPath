{
  "name": "storypath-monorepo",
  "private": true,
  "workspaces": [
    "backend",
    "backend/gateway",
    "backend/services/*",
    "mobile",
    "tools"
  ],
  "scripts": {
    "prepare": "husky",
    "dev:db": "docker compose -f backend/docker-compose.yml up -d",
    "db:down": "docker compose -f backend/docker-compose.yml down -v",
    "dev:content": "pnpm --filter content dev",
    "dev:progress": "pnpm --filter progress dev",
    "dev:backend": "pnpm -r --parallel --filter content --filter progress dev",
    "dev:up": "pnpm exec run-p dev:db dev:backend",
    "smoke": "pnpm dlx tsx tools/smoke.e2e.ts"
  },
  "engines": {
    "node": ">=20 <23",
    "pnpm": ">=9 <10"
  },
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "eslint": "^9.8.0",
    "husky": "^9.1.6",
    "lint-staged": "^16.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write"
    ]
  }
}
