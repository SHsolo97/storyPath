{
  "name": "storypath-monorepo",
  "private": true,
  "workspaces": [
    "backend",
    "backend/gateway",
    "backend/services/*",
    "mobile",
    "tools"
  ],
  "scripts": {
    "prepare": "husky",
    "dev:db": "docker compose -f backend/docker-compose.yml up -d",
    "db:down": "docker compose -f backend/docker-compose.yml down -v",
    "dev:content": "npm -w content run dev",
    "dev:progress": "npm -w progress run dev",
    "dev:backend": "npm-run-all -p dev:content dev:progress",
    "dev:up": "npm-run-all -p dev:db dev:backend",
    "smoke": "tsx tools/smoke.e2e.ts"
  },
  "engines": {
    "node": ">=20 <23",
    "npm": ">=9"
  },
  "devDependencies": {
    "eslint": "^9.8.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write"
    ]
  }
}
